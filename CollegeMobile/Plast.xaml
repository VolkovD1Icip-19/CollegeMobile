<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CollegeMobile.Plast"
              Title="Филиал №1"
             NavigationPage.HasNavigationBar="False"
             BackgroundImageSource="fon.png">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
        <StackLayout BackgroundColor="White" Margin="0" Grid.Row="0">
            <Frame Margin="20,5,20,0" CornerRadius="20" Padding="8" BackgroundColor="Black">
                <Frame Margin="-5" Padding="8" CornerRadius="17">
                    <StackLayout Orientation="Horizontal">
                        <Label Text="Пластовский технологический филиал" FontSize="17" TextColor="Black" VerticalOptions="Center" Margin="10,0,0,0"></Label>
                        <StackLayout HorizontalOptions="EndAndExpand">
                            <StackLayout.GestureRecognizers>
                                <TapGestureRecognizer x:Name="SpecialArrow" Tapped="SpecialArrow1_Tapped"></TapGestureRecognizer>
                            </StackLayout.GestureRecognizers>
                            <Image Source="Arrow.png" WidthRequest="45" HeightRequest="45"></Image>
                        </StackLayout>
                    </StackLayout>
                </Frame>
            </Frame>
        </StackLayout>
        
        
        
        <ScrollView Grid.Row="1" Margin="0,-6,0,-60">
            <StackLayout>
                <Image Source="fel1.png" HeightRequest="160" Margin="20,0,20,0"></Image>
                <Frame Margin="20,-10,74,0" CornerRadius="22" BackgroundColor="#EDEDED">
                    <Frame CornerRadius="18" Margin="-15" HasShadow="False">
                        <StackLayout>
                            <Label HorizontalTextAlignment="Center" Margin="0,-5,0,-5">Адрес: г.Пласт, ул.Володарского, 2</Label>
                        </StackLayout>
                    </Frame>
                </Frame>
                <Frame Margin="110,10,20,0" CornerRadius="23" BackgroundColor="#EDEDED">
                    <Frame CornerRadius="18" Margin="-15" HasShadow="False">
                        <StackLayout>
                            <Label HorizontalTextAlignment="Center" Margin="0,-5,0,-5">Телефон: +7 (35160) 2-04-67</Label>
                        </StackLayout>
                    </Frame>
                </Frame>
                <Image Source="kar1.png" Margin="14,5,14,10"></Image>
                <Label HeightRequest="50"></Label>
            </StackLayout>
        </ScrollView>



        <StackLayout Grid.Row="2" BackgroundColor="white" HorizontalOptions="Center" WidthRequest="450" Opacity="0.9">
            <StackLayout Orientation="Horizontal" Margin="0,5,0,0">
                <StackLayout HorizontalOptions="StartAndExpand">
                    <StackLayout Margin="20,0,0,0" Opacity="1.0">
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer x:Name="Special" Tapped="Special_Tapped"></TapGestureRecognizer>
                        </StackLayout.GestureRecognizers>
                        <Image Source="Group1.png" HorizontalOptions="Start"></Image>
                    </StackLayout>
                </StackLayout>
                <StackLayout HorizontalOptions="StartAndExpand">
                    <StackLayout Opacity="1.0">
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer x:Name="Search" Tapped="Search_Tapped"></TapGestureRecognizer>
                        </StackLayout.GestureRecognizers>
                        <Image Source="Group2.png" HorizontalOptions="Start"></Image>
                    </StackLayout>
                </StackLayout>
                <StackLayout HorizontalOptions="CenterAndExpand">
                    <StackLayout Opacity="1.0">
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer x:Name="Home" Tapped="Home_Tapped"></TapGestureRecognizer>
                        </StackLayout.GestureRecognizers>
                        <Image Source="Group3.png" HorizontalOptions="Start"></Image>
                    </StackLayout>
                </StackLayout>
                <StackLayout HorizontalOptions="EndAndExpand">
                    <StackLayout Opacity="1.0">
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer x:Name="Filial" Tapped="Filial_Tapped"></TapGestureRecognizer>
                        </StackLayout.GestureRecognizers>
                        <Image Source="Group4.png" HorizontalOptions="Start"></Image>
                    </StackLayout>
                </StackLayout>
                <StackLayout HorizontalOptions="EndAndExpand">
                    <StackLayout Margin="0,0,20,0" Opacity="1.0">
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer x:Name="Help" Tapped="Help_Tapped"></TapGestureRecognizer>
                        </StackLayout.GestureRecognizers>
                        <Image Source="Group5.png" HorizontalOptions="Start"></Image>
                    </StackLayout>
                </StackLayout>
            </StackLayout>
        </StackLayout>
    </Grid>
</ContentPage>