<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CollegeMobile.MainPage"
             BackgroundImageSource="Fon.png"
             NavigationPage.HasNavigationBar="False">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
        <StackLayout Grid.Row="0" BackgroundColor="White">
            <Frame BackgroundColor="#FFFFFF" CornerRadius="20" Margin="12.5,28,12.5,10" HeightRequest="30" BorderColor="Black" Padding="5">
                <Label Text="Специальности" HorizontalOptions="Center" HorizontalTextAlignment="Center" HeightRequest="28" TextColor="#000000" FontSize="24"></Label>
            </Frame>
        </StackLayout>
        <ScrollView Grid.Row="1" Margin="0,-6,0,-6">
            <StackLayout   Margin="0,-11,0,0">
                <Frame BackgroundColor="#FFFFFF" Padding="0" CornerRadius="20" HeightRequest="123" WidthRequest="350" Margin="12.5,35,12.5,10">
                    <StackLayout>
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer x:Name="ICiP" Tapped="ICiP_Tapped"></TapGestureRecognizer>
                        </StackLayout.GestureRecognizers>
                        <Image Source="ICiP.png"  WidthRequest="150" HeightRequest="123" Margin="-244,0,0,0" ></Image>
                        <Label FontSize="18" Margin="160,-100,20,0" HorizontalOptions="Start" HorizontalTextAlignment="Center" Text="Информационные системы и программирование" TextColor="#000" FontAttributes="Bold"></Label>
                    </StackLayout>
                </Frame>
                <Frame BackgroundColor="#FFFFFF" Padding="0" CornerRadius="20" HeightRequest="123" WidthRequest="350" Margin="12.5,11,12.5,10">
                    <StackLayout>
                        <Image Source="ST.png"  WidthRequest="150" HeightRequest="123" Margin="-244,0,0,0" ></Image>
                        <Label FontSize="18" Margin="160,-100,20,0" HorizontalOptions="Start" HorizontalTextAlignment="Center" Text="Строительство и эксплуатация зданий и сооружений" TextColor="#000" FontAttributes="Bold"></Label>
                    </StackLayout>
                </Frame>
                <Frame BackgroundColor="#FFFFFF" Padding="0" CornerRadius="20" HeightRequest="123" WidthRequest="350" Margin="12.5,11,12.5,10">
                    <StackLayout>
                        <Image Source="AT.png"  WidthRequest="150" HeightRequest="123" Margin="-244,0,0,0" ></Image>
                        <Label FontSize="18" Margin="160,-100,20,0" HorizontalOptions="Start" HorizontalTextAlignment="Center" Text="Мастер по ремонту и обслуживанию автомобилей" TextColor="#000" FontAttributes="Bold"></Label>
                    </StackLayout>
                </Frame>
                <Frame BackgroundColor="#FFFFFF" Padding="0" CornerRadius="20" HeightRequest="123" WidthRequest="350" Margin="12.5,11,12.5,10">
                    <StackLayout>
                        <Image Source="Kamen.png"  WidthRequest="150" HeightRequest="123" Margin="-244,0,0,0" ></Image>
                        <Label FontSize="18" Margin="220,-80,20,0" HorizontalOptions="Start" HorizontalTextAlignment="Center" Text="Каменщик" TextColor="#000" FontAttributes="Bold"></Label>
                    </StackLayout>
                </Frame>
                <Frame BackgroundColor="#FFFFFF" Padding="0" CornerRadius="20" HeightRequest="123" WidthRequest="350" Margin="12.5,11,12.5,10">
                    <StackLayout>
                        <Image Source="Svarka.png"  WidthRequest="150" HeightRequest="123" Margin="-244,0,0,0" ></Image>
                        <Label FontSize="18" Margin="170,-90,20,0" HorizontalOptions="Start" HorizontalTextAlignment="Center" Text="Сварочное  производство" TextColor="#000" FontAttributes="Bold"></Label>
                    </StackLayout>
                </Frame>
                <Frame BackgroundColor="#FFFFFF" Padding="0" CornerRadius="20" HeightRequest="123" WidthRequest="350" Margin="12.5,11,12.5,10">
                    <StackLayout>
                        <Image Source="ZIO.png"  WidthRequest="150" HeightRequest="123" Margin="-244,0,0,0" ></Image>
                        <Label FontSize="18" Margin="170,-100,20,0" HorizontalOptions="Start" HorizontalTextAlignment="Center" Text="Земельно- имущественные отношения" TextColor="#000" FontAttributes="Bold"></Label>
                    </StackLayout>
                </Frame>
                <Frame BackgroundColor="#FFFFFF" Padding="0" CornerRadius="20" HeightRequest="123" WidthRequest="350" Margin="12.5,11,12.5,10">
                    <StackLayout>
                        <Image Source="PRAVO.png"  WidthRequest="150" HeightRequest="123" Margin="-244,0,0,0" ></Image>
                        <Label FontSize="18" Margin="170,-100,20,0" HorizontalOptions="Start" HorizontalTextAlignment="Center" Text="Право и организация социального обеспечения" TextColor="#000" FontAttributes="Bold"></Label>
                    </StackLayout>
                </Frame>
                <Frame BackgroundColor="#FFFFFF" Padding="0" CornerRadius="20" HeightRequest="123" WidthRequest="350" Margin="12.5,11,12.5,10">
                    <StackLayout>
                        <Image Source="EKO.png"  WidthRequest="150" HeightRequest="123" Margin="-244,0,0,0" ></Image>
                        <Label FontSize="18" Margin="170,-90,20,0" HorizontalOptions="Start" HorizontalTextAlignment="Center" Text="Экономика и бухгалтерский учет" TextColor="#000" FontAttributes="Bold"></Label>
                    </StackLayout>
                </Frame>
                
                <Frame BackgroundColor="#FFFFFF" Padding="0" CornerRadius="20" HeightRequest="123" WidthRequest="350" Margin="12.5,11,12.5,10">
                    <StackLayout>
                        <Image Source="Tokar.png"  WidthRequest="150" HeightRequest="123" Margin="-244,0,0,0" ></Image>
                        <Label FontSize="18" Margin="170,-110,20,0" HorizontalOptions="Start" HorizontalTextAlignment="Center" Text="Токарь на станках с числовым программным управлением" TextColor="#000" FontAttributes="Bold"></Label>
                    </StackLayout>
                </Frame>
                <Label HeightRequest="20"></Label>
            </StackLayout>
        </ScrollView>
        <StackLayout Grid.Row="2" BackgroundColor="White">
            <Image Source="Group1.png" HeightRequest="40" HorizontalOptions="Start" Margin="29,5,0,0"></Image>
            <Image Source="Group2.png" HeightRequest="40" HorizontalOptions="Start" Margin="109,-46,0,0"></Image>
            <Image Source="Group3.png" HeightRequest="40" HorizontalOptions="Start" Margin="189,-46,0,0"></Image>
            <Image Source="Group4.png" HeightRequest="40" HorizontalOptions="Start" Margin="269,-46,0,0"></Image>
            <Image Source="Group5.png" HeightRequest="40" HorizontalOptions="Start" Margin="349,-46,0,0"></Image>
        </StackLayout>
    </Grid>
    
    
</ContentPage>
