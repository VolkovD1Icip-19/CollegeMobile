<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CollegeMobile.MainPage"
             Title="Special" BackgroundImageSource="Fon.png"
             NavigationPage.HasNavigationBar="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackLayout Grid.Row="0" BackgroundColor="White">
            <Frame BackgroundColor="#FFFFFF" CornerRadius="20" Margin="12.5,28,12.5,10" HeightRequest="30" BorderColor="Black" Padding="5">
                <Label Text="Специальности" HorizontalOptions="Center" HorizontalTextAlignment="Center" HeightRequest="28" TextColor="#000000" FontSize="24"></Label>
            </Frame>
        </StackLayout>
        <StackLayout  Grid.Row="1">
            <ScrollView>
                <StackLayout>
                    <Frame BackgroundColor="#FFFFFF" CornerRadius="20" HeightRequest="100" Margin="12.5,35,12.5,10">
                        <Image Source="Fon.png"></Image>
                    </Frame>
                </StackLayout>
            </ScrollView>
        </StackLayout>
    </Grid>
    
    
</ContentPage>
